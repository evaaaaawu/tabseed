{
  "manifest_version": 3,
  "name": "TabSeed Helper",
  "description": "Capture and close tabs to import into TabSeed.",
  "version": "0.1.0",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "TabSeed"
  }
}
